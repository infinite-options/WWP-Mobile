                <Button x:Name="proceedButton" BackgroundColor="#F26522" TextColor="White" FontSize="18" Margin="50, 10, 50, 10" Padding="0, 10"
                        CornerRadius="15" Text="Proceed" Clicked="clickedDeliv"/>

            </StackLayout>


            <!--payment summary-->

            <StackLayout x:Name="paymentStack" IsVisible="false">
              <StackLayout x:Name="receiptStack">
                <Grid HorizontalOptions="Fill" ColumnSpacing="5" BackgroundColor="#f8bb16" Padding="20, 10" Margin="0, 10, 0, 10">
                    <Label Text="Payment Summary" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Start" BackgroundColor="Transparent" FontSize="18"/>
                </Grid>

                <Grid Margin="20, 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Text="Your Box" FontAttributes="Bold" TextColor="Black"/>
                    <Label Grid.Column="1" x:Name="meal_delivery_num" FontAttributes="Bold" TextColor="Black" HorizontalOptions="End"/>
                </Grid>

                <BoxView HeightRequest="1" Color="Black" Margin="20, 0"/>

                <Grid Margin="20, 10, 20, 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Label x:Name="subtotalTitle" Text="Subtotal" FontSize="14" HorizontalOptions="Start" TextColor="Black"/>
                    <Label Grid.Column="1" x:Name="subtotalPrice" FontSize="14" HorizontalOptions="End" TextColor="Black"/>

                </Grid>

                <BoxView HeightRequest="0.5" Color="Black" Margin="20, 0"/>

                <Grid Margin="20, 5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Label x:Name="discountTitle" Text="Discount" FontSize="14" HorizontalOptions="Start" TextColor="Black"/>
                    <Label Grid.Column="1" x:Name="discountPrice" FontSize="14" HorizontalOptions="End" TextColor="Black"/>

                </Grid>

                <BoxView HeightRequest="0.5" Color="Black" Margin="20, 0"/>

                <Grid Margin="20, 5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Label x:Name="deliveryTitle" Text="Delivery Fee" FontSize="14" HorizontalOptions="Start" TextColor="Black"/>
                    <Label Grid.Column="1" x:Name="deliveryFeePrice" FontSize="14" HorizontalOptions="End" TextColor="Black"/>

                </Grid>

                <BoxView HeightRequest="0.5" Color="Black" Margin="20, 0"/>

                <Grid Margin="20, 5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Label Text="Service Fee" FontSize="14" HorizontalOptions="Start" TextColor="Black"/>
                    <Label Grid.Column="1" x:Name="serviceFeePrice" FontSize="14" HorizontalOptions="End" TextColor="Black"/>

                </Grid>

                <BoxView HeightRequest="0.5" Color="Black" Margin="20, 0"/>

                <Grid Margin="20, 5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Label Text="Taxes" FontSize="14" HorizontalOptions="Start" TextColor="Black"/>
                    <Label Grid.Column="1" x:Name="taxPrice" FontSize="14" HorizontalOptions="End" TextColor="Black"/>

                </Grid>

                <BoxView HeightRequest="0.5" Color="Black" Margin="20, 0"/> 

                <Grid Margin="20, 5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Label Text="Chef and Driver Tip" FontSize="14" HorizontalOptions="Start" TextColor="Black"/>
                    <Label Grid.Column="1" x:Name="tipPrice" FontSize="14" HorizontalOptions="End" TextColor="Black"/>

                </Grid>

                <Grid Margin="20, 10, 20, 0" HeightRequest="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="tipOpt1" CornerRadius="5" Text="No Tip" Grid.Column="0" HorizontalOptions="Fill" VerticalOptions="Fill" Margin="0, 0, 20, 0"
                            BorderColor="#F26522" BorderWidth="1" BackgroundColor="White" Clicked="clickedTip" TextColor="Black" FontSize="Micro"/>
                    <Button x:Name="tipOpt2" CornerRadius="5" Text="$2" Grid.Column="1" HorizontalOptions="Fill" VerticalOptions="Fill" Margin="10, 0"
                            BorderColor="#F26522" BorderWidth="1" BackgroundColor="#F26522" Clicked="clickedTip" TextColor="White" FontSize="Micro"/>
                    <Button x:Name="tipOpt3" CornerRadius="5" Text="$3" Grid.Column="2" HorizontalOptions="Fill" VerticalOptions="Fill" Margin="10, 0"
                            BorderColor="#F26522" BorderWidth="1" BackgroundColor="White" Clicked="clickedTip" TextColor="Black" FontSize="Micro"/>
                    <Button x:Name="tipOpt4" CornerRadius="5" Text="$5" Grid.Column="3" HorizontalOptions="Fill" VerticalOptions="Fill" Margin="20, 0, 0, 0"
                            BorderColor="#F26522" BorderWidth="1" BackgroundColor="White" Clicked="clickedTip" TextColor="Black" FontSize="Micro"/>

                </Grid>

                <Grid Margin="20, 10" HeightRequest="35">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1.3*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Frame Padding="10,0" HorizontalOptions="Fill" CornerRadius="10" HasShadow="False" BackgroundColor="White" Grid.Column="0" BorderColor="#F26522">
                        <Entry x:Name="ambassTitle" Placeholder="Enter Ambassador Code" IsTextPredictionEnabled="False" FontSize="Micro"
                               BackgroundColor="White" PlaceholderColor="Black" TextColor="Black"/>
                    </Frame>

                    <Button Grid.Column="1" x:Name="verifyCode" Text="Verify" CornerRadius="10" TextColor="White" FontSize="14" HorizontalOptions="Start" Padding="25, 0"
                            BackgroundColor="#F26522" Clicked="clickedVerifyCode"/>

                    <Label Grid.Column="2" x:Name="ambassDisc" FontSize="14" HorizontalOptions="End" TextColor="Black" VerticalOptions="Center"/>

                </Grid>

                <BoxView HeightRequest="0.5" Color="Black" Margin="20, 0"/> 
                
                <Grid Margin="20, 5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Label Text="Total" FontSize="16" HorizontalOptions="Start" TextColor="Black" FontAttributes="Bold"/>
                    <Label Grid.Column="1" x:Name="grandTotalPrice" FontSize="16" HorizontalOptions="End" TextColor="Black" FontAttributes="Bold"/>

                </Grid>
              </StackLayout>

                <Grid HorizontalOptions="Fill" ColumnSpacing="5" BackgroundColor="#f8bb16" Padding="20, 10" Margin="0, 10, 0, 10">
                    <Label Text="Complete Payment" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Start" BackgroundColor="Transparent" FontSize="18"/>
                </Grid>



    <!--stripe credit card section-->
          <StackLayout x:Name="completePaymentStack">
                <Grid HorizontalOptions="Center" VerticalOptions="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <!--<ColumnDefinition Width="1*"/>-->
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                   <Frame  Grid.Row="0" Grid.Column="0" Padding="10,5" Margin="20,10,20,1" BackgroundColor="White" HasShadow="False"
                          BorderColor="#F26522" CornerRadius="10">
                        <Entry x:Name="cardHolderName" Keyboard="Text" FontSize="17" TextColor="Black" Placeholder="Cardholder Name*" PlaceholderColor="Black"
                               Focused="stripeInfo_Focused"/>
                   </Frame>

                </Grid>

                <Grid HorizontalOptions="Center" VerticalOptions="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <!--<ColumnDefinition Width="1*"/>-->
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                   <Frame  Grid.Row="0" Grid.Column="0" Padding="10,5" Margin="20,1" BackgroundColor="White" HasShadow="False"
                          BorderColor="#F26522" CornerRadius="10">
                        <Entry x:Name="cardHolderNumber" Keyboard="Text" FontSize="17" TextColor="Black" Placeholder="Card Number*" MaxLength="16" PlaceholderColor="Black"
                               Focused="stripeInfo_Focused"/>
                   </Frame>

                </Grid>

                <Grid HorizontalOptions="Center" VerticalOptions="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                   <Frame  Grid.Row="0" Grid.Column="0" Padding="10,5" Margin="20,1,2,1" BackgroundColor="White" HasShadow="False"
                          BorderColor="#F26522" CornerRadius="10">
                        <Entry x:Name="cardExpMonth" Keyboard="Numeric" FontSize="17" TextColor="Black" Placeholder="Exp MM*" MaxLength="2" PlaceholderColor="Black"
                               Focused="stripeInfo_Focused"/>
                   </Frame>

                   <Frame  Grid.Row="0" Grid.Column="1" Padding="10,5" Margin="1,1,2,1" BackgroundColor="White" HasShadow="False"
                          BorderColor="#F26522" CornerRadius="10">
                        <Entry x:Name="cardExpYear" Keyboard="Numeric" FontSize="17" TextColor="Black" Placeholder="Exp YY*" MaxLength="2" PlaceholderColor="Black"
                               Focused="stripeInfo_Focused"/>
                   </Frame>

                    <Frame  Grid.Row="0" Grid.Column="2" Padding="10,5" Margin="2,1,20,1" BackgroundColor="White" HasShadow="False"
                          BorderColor="#F26522" CornerRadius="10">
                        <Entry x:Name="cardCVV" Keyboard="Numeric" FontSize="17" TextColor="Black" Placeholder="CVV*" MaxLength="3" PlaceholderColor="Black"
                               Focused="stripeInfo_Focused"/>
                   </Frame>
                </Grid>

                <Frame x:Name="cardAddFrame" Padding="10,5" Margin="20,0.5,20,0.5" HasShadow="False" BorderColor="#F26522" CornerRadius="10">
                            <Entry Placeholder="Billing Address*" x:Name="cardHolderAddress" FontSize="17" PlaceholderColor="Black"
                                   Text="{Binding AddressText2}" TextChanged="OnAddressChanged" Focused="addressEntryFocused" Unfocused="addressEntryUnfocused"></Entry>
                        </Frame>

                        <Frame x:Name="addressListFrame" HeightRequest="180" HasShadow="False" BackgroundColor="White" IsVisible="false" Padding="0">
                            <ListView x:Name="addressList2" ItemsSource="{Binding Addresses}" IsVisible="false" ItemSelected="addressSelected">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <TextCell Text="{Binding Address}"/>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Frame>

                        <Grid x:Name="UnitGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Frame x:Name="Unit" Padding="10,5" Margin="20,0.5,1,0.5" BorderColor="#F26522" HasShadow="False" CornerRadius="10">
                                <Entry Placeholder="Unit" x:Name="cardHolderUnit" FontSize="17"   PlaceholderColor="Black"></Entry>
                            </Frame>

                            <Frame  Grid.Row="0" Grid.Column="1" Padding="10,5" Margin="1,0.5,20,0.5" BorderColor="#F26522" HasShadow="False" CornerRadius="10">
